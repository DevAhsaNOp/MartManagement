@model MartManagement.BOL.Category

@{
    ViewBag.Title = "Edit";
}

<h2>Edit @ViewBag.CategoryName</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal mb-3">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Category_Id)

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Category_Name, htmlAttributes: new { @class = "control-label col-md-2", @style = "width: fit-content;" })
            @Html.ValidationMessageFor(model => model.Category_Name, "", new { @class = "text-danger" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Category_Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Category_Description, htmlAttributes: new { @class = "control-label col-md-2", @style = "width: fit-content;" })
            @Html.ValidationMessageFor(model => model.Category_Description, "", new { @class = "text-danger" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Category_Description, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Category" class="btn btn-success btn-sm" />
            </div>
        </div>
    </div>
}
<p>
    @Html.ActionLink("Back to List", "List", null, htmlAttributes: new { @class = "btn btn-secondary btn-sm" })
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
