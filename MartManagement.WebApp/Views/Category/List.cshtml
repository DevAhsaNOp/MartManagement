@model IEnumerable<MartManagement.BOL.Category>
@{
    ViewBag.Title = "List";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
@if (TempData["SuccessMsg"] != null)
{
    <br /><br />
    <div class="alert alert-dismissable alert-success">
        @TempData["SuccessMsg"].ToString() <p class="pull-right">&times;</p>
    </div>
}
@if (TempData["ErrorMsg"] != null)
{
    <br /><br />
    <div class="alert alert-dismissable alert-danger">
        @TempData["ErrorMsg"].ToString() <p class="pull-right">&times;</p>
    </div>
}
<h2>Category List</h2>
<p>
    @Html.ActionLink("Create Category", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-condensed table-hover" id="moGrid">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category_Description)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category_Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Category_Id }, htmlAttributes: new { @class = "btn btn-success btn-sm" })
                    @Html.ActionLink("Details", "Details", new { id = item.Category_Id }, htmlAttributes: new { @class = "btn btn-info btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $('#moGrid').dataTable({
    });
</script> 