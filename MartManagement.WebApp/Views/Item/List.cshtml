@model IEnumerable<MartManagement.BOL.Item>

@{
    ViewBag.Title = "List";
}

@if (TempData["SuccessMsg"] != null)
{
    <br /><br />
    <div class="alert alert-dismissable alert-success">
        @TempData["SuccessMsg"].ToString() <p class="pull-right">&times;</p>
    </div>
}
@if (TempData["ErrorMsg"] != null)
{
    <br /><br />
    <div class="alert alert-dismissable alert-danger">
        @TempData["ErrorMsg"].ToString() <p class="pull-right">&times;</p>
    </div>
}
<h2>Item List</h2>
<p>
    @Html.ActionLink("Create Item", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Item_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item_BuyPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item_Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item_TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubCategory.SubCategory_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Item_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item_BuyPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item_Stock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item_TotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubCategory.SubCategory_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Item_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Item_Id })
        </td>
    </tr>
}

</table>
