@model MartManagement.BOL.Customer

@{
    ViewBag.Title = "Details";
}
<style>
    dt{
        text-align:left !important;
    }
</style>
<h2>Details @ViewBag.CustomerName Customer Record</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Customer_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Customer_PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer_PhoneNumber)
        </dd>

    </dl>
</div>
<h3 style="text-align:center !important;color:black !important;">
    Orders of current <b>Customer</b>
</h3>
<table class="table table-bordered table-condensed" style="background: #8baeed !important;">
    <tr>
        <th style="color: black !important;">Order Number</th>
        <th style="color: black !important;">Order Date</th>
        <th style="color: black !important;">Payment Method</th>
        <th style="color: black !important;">Order Total Price</th>
        <th style="color: black !important;">Details</th>
    </tr>
    @if (Model.Orders.Count <= 0)
    {
        <tr style="text-align:center !important">
            <th style="color: white !important; text-align:center" colspan="5">No Records Found! </th>
        </tr>
    }
    else
    {
        foreach (var item in Model.Orders)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentType.PaymentType_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order_FinalTotal)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Order", new { id = item.Order_Id }, htmlAttributes: new { @class = "btn btn-warning btn-sm" })
                </td>
            </tr>
        }
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Customer_Id }, htmlAttributes: new { @class = "btn btn-success btn-sm" })
    @Html.ActionLink("Back to List", "List", null, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
</p>
