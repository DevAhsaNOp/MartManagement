@model MartManagement.BOL.SubCategory

@{
    ViewBag.Title = "Details";
}
<style>
    dt {
        text-align: left !important;
    }
</style>

<h2>Details of @ViewBag.CategoryName</h2>


<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.Category_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Category_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SubCategory_Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubCategory_Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SubCategory_Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubCategory_Description)
        </dd>
    </dl>
</div>
<h3 style="text-align:center !important;color:black !important;">
    Items on current <b>Sub Category</b>
</h3>
<table class="table table-bordered table-condensed" style="background: #8baeed !important;">
    <tr>
        <th style="color: black !important;">Item Name</th>
        <th style="color: black !important;">Item Buy Price</th>
        <th style="color: black !important;">Item Stock</th>
        <th style="color: black !important;">Item Total Price</th>
        <th style="color: black !important;">Edit</th>
        <th style="color: black !important;">Details</th>
    </tr>
    @if (Model.Items.Count <= 0)
    {
        <tr style="text-align:center !important">
            <th style="color: white !important; text-align:center" colspan="6">No Records Found! </th>
        </tr>
    }
    else
    {
        foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Item_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item_BuyPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item_Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item_TotalPrice)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Item", new { id = item.Item_Id }, htmlAttributes: new { @class = "btn btn-success btn-sm" })
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Item", new { id = item.Item_Id }, htmlAttributes: new { @class = "btn btn-warning btn-sm" })
                </td>
            </tr>
        }
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SubCategory_Id }, htmlAttributes: new { @class = "btn btn-success btn-sm" }) 
    @Html.ActionLink("Back to List", "List", null, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
</p>
