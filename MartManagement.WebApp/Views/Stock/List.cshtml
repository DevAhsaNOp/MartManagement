@model IEnumerable<MartManagement.BOL.Stock>

@{
    ViewBag.Title = "List";
}

@if (TempData["SuccessMsg"] != null)
{
    <br /><br />
    <div class="alert alert-dismissable alert-success">
        @TempData["SuccessMsg"].ToString() <p class="pull-right">&times;</p>
    </div>
}
@if (TempData["ErrorMsg"] != null)
{
    <br /><br />
    <div class="alert alert-dismissable alert-danger">
        @TempData["ErrorMsg"].ToString() <p class="pull-right">&times;</p>
    </div>
}
<h2>Stock List</h2>
<p>
    @Html.ActionLink("Create Stock", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Item.Item_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock_Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock_RetailPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock_TotalPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item.Item_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock_Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock_RetailPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock_TotalPrice)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Stock_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Stock_Id })
            </td>
        </tr>
    }

</table>
