    <style type="text/css">
        /*Added css for design notification area, you can design by your self*/
        /* COPY css content from youtube video description*/
        .noti-content {
            position: fixed;
            right: 100px;
            background: #e5e5e5;
            border-radius: 4px;
            top: 47px;
            width: 250px;
            display: none;
            border: 1px solid #9E988B;
        }

        ul#notiContent {
            max-height: 600px;
            overflow: auto;
            padding: 0px;
            margin: 0px;
            padding-left: 20px;
        }

            ul#notiContent li {
                margin: 3px;
                padding: 6px;
                background: #fff;
            }

        .noti-top-arrow {
            border-color: transparent;
            border-bottom-color: #F5DEB3;
            border-style: dashed dashed solid;
            border-width: 0 8.5px 8.5px;
            position: absolute;
            right: 32px;
            top: -8px;
        }

        span.noti {
            color: #FF2323;
            margin: 15px;
            position: fixed;
            right: 100px;
            font-size: 18px;
            cursor: pointer;
        }

        span.count {
            position: relative;
            top: -3px;
        }
    </style>

    @* Add jquery code for Get Notification & setup signalr *@
    <script type="text/javascript">

        $(document).ready(function () {
            updateNotification();
            GetCount();
            $('span.noti').click(function (e) {
                e.stopPropagation();
                $('.noti-content').show();
                var count = 0;
                count = parseInt($('span.count').html()) || 0;
                //Only load notification if not already loaded
                if (count > 0) {
                    updateNotification();
                    sessionStorage.setItem("count", 0);
                }
                $('span.count', this).html('&nbsp;');
            })

            // Hide notifications
            $('html').click(function () {
                $('.noti-content').hide();
            })


            $.connection.hub.start()
                .done(function () {
                    var notificationHub = $.connection.notificationHub;
                    console.log('SignalR connection established.');
                    notificationHub.client.displayStatus = function (message) {
                        console.log('Received message: ' + message);
                        if (message.toLowerCase() == "added") {
                            updateNotificationCount();
                        }
                    };
                })
                .fail(function (error) {
                    console.log('Connection failed: ' + error);
                });
        });

        function GetCount() {
            var count = sessionStorage.getItem("count");
            if (count > 0) {
                $('span.count').html(count);
            }
            else {
                $('span.count', this).html('&nbsp;');
            }
        }

        // Update notification
        function updateNotification() {
            $('#notiContent').empty();
            $('#notiContent').append($('<li>Loading...</li>'));
            $.ajax({
                type: 'GET',
                url: '/Item/GetNotificationItem',
                success: function (response) {
                    $('#notiContent').empty();
                    if (response.length == 0) {
                        $('#notiContent').append($('<li>No data available</li>'));
                    }
                    $.each(response, function (index, value) {
                        $('#notiContent').append($('<li>Item Stock Alert: ' + value.Item_Name + ' is less than (' + value.Item_Stock + ') </li>'));
                    });
                },
                error: function (error) {
                    console.log(error);
                }
            })
        }

        // Update notification count
        function updateNotificationCount() {
            console.log('Notification received');
            var count = 0;
            count = parseInt($('span.count').html()) || 0;
            count++;
            $('span.count').html(count);
            sessionStorage.setItem("count", count);
        }

    </script>
